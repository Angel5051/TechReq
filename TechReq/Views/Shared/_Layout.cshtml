                            <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                            <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.223,0-9.654-3.343-11.303-8l-6.571,4.819C9.656,39.663,16.318,44,24,44z" />
                            <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
                        </svg>
                        <span>Войти через Google</span>
                    </a>
                </div>
            </form>

            <form id="form_register" class="tab-form">
                <div id="error-messages-register"></div>
                <input type="text" name="Login" placeholder="Имя пользователя" required>
                <input type="email" name="Email" placeholder="Email" required>
                <input type="password" name="Password" placeholder="Пароль" required>
                <input type="password" name="PasswordConfirm" placeholder="Подтверждение пароля" required>
                <button type="submit">Зарегистрироваться</button>

                <div class="social-login-container">
                    <a href="#" class="google-btn" id="googleRegisterBtn">
                        <svg width="24" height="24" viewBox="0 0 48 48">
                            <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" />
                            <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
                            <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.223,0-9.654-3.343-11.303-8l-6.571,4.819C9.656,39.663,16.318,44,24,44z" />
                            <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
                        </svg>
                        <span>Google</span>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="mobile-panel" id="mobilePanel">
        <div class="panel-inner">
            <ul class="nav-list">
                <li><a href="#home">🏠 Главная</a></li>
                <li><a href="#about">ℹ️ О нас</a></li>
                <li><a href="#services">🛠 Услуги</a></li>
                <li><a href="#map">🗺 Карта</a></li>
            </ul>

            <div style="display:flex;gap:10px;justify-content:space-between; margin-top: 20px;">
                <button class="btn" id="guestBtn">Закрыть</button>
                <button class="btn btn-primary" id="mobileLogin">Войти</button>
            </div>
        </div>
    </div>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-container">
            <div class="footer-logo">
                <h3>TechReq</h3>
                <p>Обслуживание автомобилей с заботой о вашем времени. Временные автомобили всегда к вашим услугам.</p>
            </div>

            <div class="footer-links">
                <div>
                    <h4>Услуги</h4>
                    <ul>
                        <li>Техническое обслуживание</li>
                        <li>Ремонт двигателя</li>
                        <li>Выдача временных авто</li>
                    </ul>
                </div>
                <div>
                    <h4>Компания</h4>
                    <ul>
                        <li>О нас</li>
                        <li>Карьера</li>
                        <li>Контакты</li>
                    </ul>
                </div>
                <div>
                    <h4>Помощь</h4>
                    <ul>
                        <li>Частые вопросы</li>
                        <li>Обновления и акции</li>
                        <li>Руководства по авто</li>
                    </ul>
                </div>
            </div>
        </div>
        <p class="footer-bottom">© 2025 TechReq. Все права защищены.</p>
    </footer>

    <style>
        /* --- Фон (Затемнение) --- */
        .ios-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5); /* Чуть темнее */
            backdrop-filter: blur(5px);
            -webkit-backdrop-filter: blur(5px);
            /* ВАЖНО: Самый высокий приоритет отображения */
            z-index: 2147483647 !important;
            display: flex;
            justify-content: center;
            align-items: center;
            /* УБИРАЕМ opacity: 0, чтобы окно было видно сразу */
            opacity: 1;
        }
        /* --- Окно (Эффект стекла) --- */
        .ios-modal {
            width: 270px; /* Стандартная ширина iOS алертов */
            background-color: rgba(245, 245, 245, 0.85);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 14px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            text-align: center;
            overflow: hidden;
            transform: scale(1.1);
            animation: iosPopIn 0.25s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }

        /* --- Шапка --- */
        .ios-header {
            padding: 20px 16px 15px;
        }

            .ios-header h3 {
                margin: 0 0 5px;
                font-size: 17px;
                font-weight: 600;
                color: #000;
            }

            .ios-header p {
                margin: 0;
                font-size: 13px;
                color: #000;
                line-height: 1.4;
            }

        /* --- Тело (Инпут) --- */
        .ios-body {
            padding: 0 16px 20px;
        }

        .ios-input {
            width: 100%;
            padding: 6px;
            font-size: 18px;
            letter-spacing: 3px;
            text-align: center;
            border: 1px solid rgba(0,0,0,0.1);
            border-radius: 5px;
            background: #fff;
            outline: none;
            color: #000;
        }

            .ios-input:focus {
                border-color: #007aff;
                box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.1);
            }

            .ios-input::placeholder {
                letter-spacing: 0;
                font-size: 14px;
                color: #ccc;
            }

        /* --- Кнопки (Сетка) --- */
        .ios-footer {
            display: flex;
            border-top: 1px solid rgba(60, 60, 67, 0.2); /* Линия-разделитель */
        }

        .ios-btn {
            flex: 1;
            background: transparent;
            border: none;
            padding: 12px 0;
            font-size: 17px;
            cursor: pointer;
            transition: background-color 0.2s;
            /* Убираем стандартные стили кнопок */
            margin: 0;
            line-height: normal;
        }

            .ios-btn:active {
                background-color: rgba(0,0,0,0.1);
            }

            /* Разделитель между кнопками */
            .ios-btn + .ios-btn {
                border-left: 1px solid rgba(60, 60, 67, 0.2);
            }

        /* Цвета текста кнопок */
        .ios-blue {
            color: #007aff;
            font-weight: 600;
        }

        .ios-red {
            color: #ff3b30;
            font-weight: 400;
        }

        /* Предупреждение внизу */
        .ios-warning-text {
            font-size: 10px;
            color: #8e8e93;
            padding: 8px;
            background: rgba(0,0,0,0.02);
        }
    </style>

    <div id="iosConfirmModal" class="ios-overlay" style="display: none;">
        <div class="ios-modal">

            <div class="ios-header">
                <h3>Подтверждение Email</h3>
                <p>Мы отправили код на вашу почту.<br>Введите его ниже.</p>
            </div>

            <div class="ios-body">
                <input type="text"
                       id="codeData"
                       class="ios-input"
                       placeholder="Код из письма"
                       maxlength="4"
                       autocomplete="off">
            </div>

            <div class="ios-footer">
                <button id="btnCloseCode" class="ios-btn ios-red">Отмена</button>
                <button id="btnSendCode" class="ios-btn ios-blue">OK</button>
            </div>

            <div class="ios-warning-text">
                Не закрывайте окно до завершения
            </div>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Глобальная переменная, которая будет доступна на всем фронтенде
        const isAuthenticated = @(User.Identity.IsAuthenticated.ToString().ToLower());

        // --- ГЛОБАЛЬНАЯ ФУНКЦИЯ ОТКРЫТИЯ МОДАЛЬНОГО ОКНА ---
        window.openAuthModal = function(targetTab = 'login') {
            const modal = document.querySelector("#authModal");
            if (!modal) return;

            // 1. Устанавливаем активный таб и форму вручную
            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabForms = document.querySelectorAll('.tab-form');

            tabButtons.forEach(b => b.classList.remove('active'));
            tabForms.forEach(f => f.classList.remove('active'));

            const targetBtn = document.querySelector(`.tab-btn[data-tab="${targetTab}"]`);
            const targetForm = document.getElementById(`form_${targetTab}`);

            if (targetBtn) targetBtn.classList.add('active');
            if (targetForm) targetForm.classList.add('active');

            // 2. Открытие модального окна (делаем его видимым)
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden';

            // Optional: Выводим в консоль для отладки
            console.log(`DEBUG: Modal opened for tab: ${targetTab}`);
        };

        // --- Обработчик переключения табов внутри модального окна ---
        // Это заменяет старую, потенциально ошибочную логику
        document.querySelectorAll('.tab-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                e.preventDefault();
                const targetTab = btn.dataset.tab;

                document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
                document.querySelectorAll('.tab-form').forEach(f => f.classList.remove('active'));

                btn.classList.add('active');
                const targetForm = document.getElementById(`form_${targetTab}`);
                if (targetForm) targetForm.classList.add('active');
            });
        });

        // --- Дополнительная привязка закрытия по крестику ---
        document.querySelector('.close')?.addEventListener('click', () => {
            document.querySelector("#authModal").style.display = 'none';
            document.body.style.overflow = '';
        });

        // --- Логика открытия мобильного меню (для Гамбургера) ---
        const hamburger = document.getElementById('hamburger');
        const mobilePanel = document.getElementById('mobilePanel');

        if (hamburger && mobilePanel) {
            hamburger.addEventListener('click', () => {
                const isHidden = mobilePanel.style.display === 'none' || mobilePanel.style.display === '';
                mobilePanel.style.display = isHidden ? 'block' : 'none';
            });
        }

        // Если мобильная кнопка "Войти" нажимается
        document.getElementById('mobileLogin')?.addEventListener('click', (e) => {
             e.preventDefault();
             window.openAuthModal('login');
             // Закрываем мобильное меню после открытия модалки
             document.getElementById('mobilePanel').style.display = 'none';
        });

    </script>
</body>
</html>
