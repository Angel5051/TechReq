<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TechReq - Автосервис</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechReq.styles.css" asp-append-version="true" />
</head>
<body>

    <header role="banner">
        <div class="header-left">
            <div class="brand">
                <div class="logo">TR</div>
                <div>
                    <h1>TechReq</h1>
                    <p>Техническое обслуживание</p>
                </div>
            </div>

            <nav>
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">О нас</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="ListOfServices">Услуги</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="@Url.Action("ListOfParts", "Parts")" style="color: #ffd700;">Мои Заказы</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Profile", "Account")">Мой Профиль</a>
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Map">Карта</a>
                    </li>
                </ul>
            </nav>
        </div>

        <div id="header-button">

            @if (User.Identity.IsAuthenticated)
            {
                // Если вошел: Показываем кнопку "Выйти"
                // Она работает как ссылка, JS ей не нужен
                <a class="btn btn-secondary" href="@Url.Action("Logout", "Home")">Выйти</a>
            }
            else
            {
                // Если НЕ вошел: Показываем кнопку "Войти" (открывает модалку через JS)
                <button id="authBtn" class="btn btn-primary" onclick="window.openAuthModal('login')">Войти</button>
            }

            <button class="hamburger" id="hamburger">
                <svg width="20" height="20" viewBox="0 0 24 24">
                    <path d="M4 7h16M4 12h16M4 17h16" stroke="currentColor" stroke-width="1.6" />
                </svg>
            </button>
        </div>
    </header>

    <div id="authModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <div class="tabs">
                <div class="tab-btn active" data-tab="login">Вход</div>
                <div class="tab-btn" data-tab="register">Регистрация</div>
            </div>

            <form id="form_login" class="tab-form active">
                <div id="error-messages-login"></div>
                <input type="email" name="Email" placeholder="Email" required>
                <input type="password" name="Password" placeholder="Пароль" required>
                <button type="submit">Войти</button>

                <div class="social-login-container">
                    <a href="#" class="google-btn" id="googleLoginBtn">
