@* Файл: TechReq/Views/Home/Map.cshtml - Система Двухслойной Карты (Dual-Layer Map System) *@
@{
    ViewData["Title"] = "Наше местоположение";
    Layout = "_Layout";
}

<style>
    /* Переопределение фона body для эффекта стекла */
    body {
        background: radial-gradient(circle at 10% 80%, rgba(200, 230, 255, 0.8) 0%, rgba(180, 200, 250, 0.4) 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }

    .map-wrapper {
        padding-top: 50px;
        padding-bottom: 50px;
    }

    /* Главный контейнер карты, на который наложены эффекты */
    .map-container {
        position: relative;
        /* Используем стеклянный эффект, чтобы вся карта светилась */
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(15px);
        border-radius: 30px;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        width: 100%;
        min-height: 600px;
        z-index: 1; /* Гарантируем, что карта находится под overlay */
    }

    .map-iframe {
        width: 100%;
        height: 600px;
        border: none;
        border-radius: 30px; /* Скругляем саму карту, чтобы она вписалась в контейнер */
    }

    /* Элемент, который ПАРИТ НАД КАРТОЙ */
    .map-overlay-panel {
        position: absolute;
        top: 50px;
        right: 50px; /* Позиционируем справа сверху */
        width: 350px;
        /* Стили Glassmorphism */
        background: rgba(255, 255, 255, 0.9); /* Почти непрозрачное стекло */
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2); /* Выделяем плашку */
        padding: 30px;
        z-index: 10; /* САМЫЙ ВЫСОКИЙ СЛОЙ */
    }

    .map-info-item {
        margin-bottom: 15px;
        font-size: 1.05rem;
    }

        .map-info-item i {
            color: #007AFF; /* Синий акцент */
            margin-right: 10px;
            font-size: 1.2rem;
        }

    /* Адаптация: на мобильных плашка должна встать внизу */
    @@media (max-width: 992px) {
        .map-overlay-panel {
            position: relative;
            top: auto;
            right: auto;
            width: 100%;
            margin-top: 20px;
            border-radius: 0 0 30px 30px; /* Скругляем только внизу контейнера */
        }
    }
</style>


<div class="container map-wrapper">
    <h1 class="fw-bold text-center mb-5" style="color: #1d1d1f; font-size: 2.5rem;">Наше местоположение</h1>

    <div class="map-container">

        <div class="map-overlay-panel">
            <h4 class="fw-bold mb-4" style="color: #1d1d1f;">TechReq Автосервис</h4>

            <div class="map-info-item">
                <i class="bi bi-geo-alt-fill"></i>
                г. Тирасполь, ул. Профессиональная, 10
            </div>

            <div class="map-info-item">
                <i class="bi bi-clock-fill"></i>
                Пн-Сб: 9:00 - 18:00 (Вс - выходной)
            </div>
            <div class="map-info-item">
                <i class="bi bi-telephone-fill"></i>
                +373 777-777-77
            </div>
            <button class="btn btn-primary w-100 mt-3 rounded-pill" onclick="window.openAuthModal('login')">
                Записаться на ТО
            </button>
        </div>
        <iframe class="map-iframe"
                title="Местоположение ТехСервис"
                src="https://maps.app.goo.gl/LGz4n9sEuKichfWD9"
                allowfullscreen="true"
                frameborder="0">
        </iframe>
    </div>
</div>