@{
    ViewData["Title"] = "Главная";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background: #f0f2ff;
        margin: 0;
        padding: 0;
    }

    #authBtn {
        padding: 12px 24px;
        background: #6366f1;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
    }

        #authBtn:hover {
            background: #7c3aed;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
    }

    .modal-content {
        background: rgba(255,255,255,0.15);
        backdrop-filter: blur(12px);
        margin: 6% auto;
        padding: 25px;
        border-radius: 18px;
        width: 380px;
        color: #fff;
        position: relative;
        box-shadow: 0 0 25px rgba(0,0,0,0.4);
        animation: popup 0.4s ease;
    }


    to {
        opacity: 1;
        transform: scale(1);
    }



    .close {
        position: absolute;
        right: 12px;
        top: 8px;
        font-size: 26px;
        cursor: pointer;
        color: #fff;
    }

    .tabs {
        display: flex;
        margin-bottom: 16px;
    }

    .tab-btn {
        flex: 1;
        padding: 10px;
        text-align: center;
        cursor: pointer;
        border-bottom: 2px solid transparent;
        transition: 0.35s ease;
        color: rgba(255,255,255,0.7);
        font-size: 15px;
    }

        .tab-btn.active {
            border-bottom: 2px solid #fff;
            color: #fff;
            font-weight: bold;
            transform: translateY(-2px);
        }

    .tab-form {
        display: none;
        opacity: 0;
        transform: translateY(10px);
        transition: opacity 0.35s ease, transform 0.35s ease;
    }

        .tab-form.active {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }

        .tab-form input {
            width: 100%;
            padding: 10px;
            margin-bottom: 12px;
            border-radius: 8px;
            border: none;
        }

        .tab-form button {
            width: 100%;
            padding: 12px;
            margin-top: 5px;
            border: none;
            border-radius: 8px;
            background: #6366f1;
            color: white;
            cursor: pointer;
            font-size: 16px;
            transition: 0.3s;
        }

            .tab-form button:hover {
                background: #7c3aed;
            }

    .email-login-btn {
        margin-top: 10px;
        background: #4f46e5;
    }

    .error {
        color: #ff6b6b;
        font-size: 14px;
        margin-bottom: 6px;
    }
</style>

