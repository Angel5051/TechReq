@* Файл: TechReq/Views/Home/AboutUs.cshtml - ФИНАЛЬНАЯ ВЕРСИЯ ТАЙМЛАЙНА *@
@{
    ViewData["Title"] = "История и достижения";
    Layout = "_Layout";
}

<style>
    /* Переопределение фона body для эффекта стекла */
    body {
        background: radial-gradient(circle at 10% 20%, rgba(199, 237, 250, 0.8) 0%, rgba(179, 192, 230, 0.4) 35%, rgba(170, 200, 250, 0) 100%);
        background-attachment: fixed;
        min-height: 100vh;
    }
</style>

<div class="container" style="padding-top: 50px; padding-bottom: 80px;">
    
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center mb-5">
            <h1 class="fw-bold" style="font-size: 3rem; color: #1d1d1f; line-height: 1.1;">
                Наша история: <br> 12 лет служения вашему авто
